{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    /* files are emitted by babel */
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "types",
    "src",
    "pages",
    "data"
  ],
  "exclude": ["docs/.next", "docs/export", "node_modules"]
}
